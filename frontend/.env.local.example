# Configuration Google Cloud
GOOGLE_CLOUD_PROJECT=air-paradis-sentiment
GOOGLE_CLOUD_REGION=europe-west1

# Google Cloud Logging API (optionnel - si vous voulez utiliser l'API REST directement)
# GOOGLE_CLOUD_LOGGING_API_KEY=your_api_key_here
# GOOGLE_CLOUD_ACCESS_TOKEN=your_access_token_here

# URL de l'API backend FastAPI pour centraliser le logging
NEXT_PUBLIC_API_URL=https://air-paradis-sentiment-api-qxumenjqxq-ew.a.run.app

# Webhook pour les alertes (Slack, Discord, etc.) - optionnel
# ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Configuration de l'environnement
NODE_ENV=production

# Configuration des alertes
ALERT_THRESHOLD=3
ALERT_TIME_WINDOW_MINUTES=5
ALERT_EMAIL=berchet.thomas@gmail.com
